---
interface Props {
  tags: string[];
  linked?: boolean;
}

const { tags, linked = true } = Astro.props;
---

<div class="tag-list">
  {linked
    ? tags.map((tag) => (
        <a href={`/tags/${tag}/`} class="tag">{tag}</a>
      ))
    : tags.map((tag) => (
        <span class="tag">{tag}</span>
      ))
  }
</div>

<style>
  .tag-list {
    display: flex;
    flex-wrap: wrap;
    gap: 6px;
    margin-top: 0.5em;
  }

  .tag {
    font-size: 0.78rem;
    padding: 2px 10px;
    border-radius: 12px;
    background: var(--tag-bg);
    color: var(--text-secondary);
    text-decoration: none;
    transition: color 0.2s;
  }

  a.tag:hover {
    color: var(--text);
  }
</style>
